generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int       @id @default(autoincrement())
  auth0Id       String?   @unique
  email         String    @unique
  firstName     String?
  lastName      String?
  timezone      String?   // e.g. "America/Denver"
  role          String?   // admin, user, etc.
  lastSynced    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  contacts      Contact[]
  sequences     Sequence[]
  messages      Message[]
  templates     Template[]
  signatures    UserSignature[]
}

model Contact {
  id             Int       @id @default(autoincrement())
  ownerId        Int
  owner          User      @relation(fields: [ownerId], references: [id])
  email          String
  firstName      String?
  lastName       String?
  company        String?
  title          String?
  phone          String?
  linkedIn       String?
  importance     Int?
  associatedRole String?   // e.g. "Junior Engineer"
  active         Boolean   @default(false )
  lastActivity   DateTime?
  replied        Boolean   @default(false)
  validEmail     Boolean? 
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  autoCreated    Boolean   @default(false)

  messages       Message[]
  sequences      Sequence[]  @relation("ContactSequences")
  emailReplies   EmailReply[]
}

model Message {
  id                        Int           @id @default(autoincrement())
  contactId                 Int
  contact                   Contact       @relation(fields: [contactId], references: [id], onDelete: Cascade)
  ownerId                   Int
  owner                     User          @relation(fields: [ownerId], references: [id])
  sequenceId                Int?
  sequence                  Sequence?     @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  templateId                Int?
  template                  Template?     @relation(fields: [templateId], references: [id], name: "TemplateMessages")
  subject                   String
  contents                  String        @db.VarChar(5000)
  direction                 String        // "outbound" or "inbound"
  createdAt                 DateTime      @default(now())
  messageId                 String?       // Gmail message ID
  threadId                  String?       // Gmail thread ID  
  inReplyTo                 String?       // Reference to original message messageId
  hasReply                  Boolean       @default(false)
  replyDate                 DateTime?     // Date when contact replied
  needsApproval             Boolean?  
  approved                  Boolean?    
  approvalDeadline          DateTime?   
  scheduledAt               DateTime?
  status                    MessageStatus @default(scheduled)
  sendAttempts              Int           @default(0)
  sentAt                    DateTime?     
  lastError                 String?
  needsFollowUp             Boolean       @default(false)
  nextMessageGenerated      Boolean       @default(false)

  @@index([status, scheduledAt])
}

model EmailReply {
  id                Int       @id @default(autoincrement())
  ownerId           Int
  originalMessageId String    // Gmail messageId of the original outbound message
  replyMessageId    String    // Gmail messageId of the reply
  threadId          String    // Gmail threadId
  contactId         Int
  contact           Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  sequenceId        Int?
  sequence          Sequence? @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  replySubject      String
  replyContent      String
  replyHistory      String?
  replyDate         DateTime
  isAutomated       Boolean   @default(false) // OOO or auto-reply
  processed         Boolean   @default(false)
  createdAt         DateTime  @default(now())
}

model Sequence {
  id                        Int       @id @default(autoincrement())
  title                     String    
  contactId                 Int
  contact                   Contact   @relation(fields: [contactId], references: [id], name: "ContactSequences", onDelete: Cascade)
  ownerId                   Int
  owner                     User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  sequenceType              String    // e.g. "3-2-1"
  autoSend                  Boolean   @default(false)
  autoSendDelay             Int?      // days
  sequenceDuration          Int?      @default(30)
  currentStep               Int       @default(0)
  nextStepDue               DateTime?
  endDate                   DateTime? // createdAt + autoSendDuration days
  active                    Boolean   @default(true)
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  referencePreviousEmail    Boolean?     
  alterSubjectLine          Boolean? 

  messages         Message[]
  emailReplies     EmailReply[]
}

model Job {
  id         Int       @id @default(autoincrement())
  type       String    // e.g., 'send_email', 'parse_email', 'bounce_handler'
  payload    Json
  status     String    @default("pending") // pending, in_progress, done, failed
  attempts   Int       @default(0)
  runAt      DateTime? // scheduled time
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Template {
  id           Int      @id @default(autoincrement())
  userId       Int
  owner        User     @relation(fields: [userId], references: [id])
  name         String   // "Follow-up Template #1", "Initial Outreach"
  subject      String   // Email subject line with placeholders
  content      String   @db.Text // Quill delta JSON or HTML content
  contentType  String   @default("quill") // "quill", "html", "plain"
  category     String?  // "follow-up", "initial", "thank-you", etc.
  isDefault    Boolean  @default(false)
  isActive     Boolean  @default(true)
  usageCount   Int      @default(0) // Track how often it's used
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Track which messages used this template
  messages     Message[] @relation("TemplateMessages")
}

model UserSignature {
  id        Int      @id @default(autoincrement())
  userId    Int
  owner     User     @relation(fields: [userId], references: [id])
  name      String   // "Professional", "Casual", "Default"
  content   String   @db.Text // Quill delta JSON or HTML
  isDefault Boolean  @default(false)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MessageStatus {
  scheduled
  pending
  sent
  failed
  cancelled
}